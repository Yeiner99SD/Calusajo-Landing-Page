---
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4">
            <h1 class="text-4xl font-bold text-center mb-12">Contáctanos</h1>
            <div class="max-w-3xl mx-auto">
                <form class="bg-white p-8 rounded-lg shadow-md">
                    <div class="mb-6">
                        <label for="name" class="block text-gray-700 font-medium mb-2">Nombre</label>
                        <input type="text" id="name" name="name" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" required>
                    </div>
                    <div class="mb-6">
                        <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
                        <input type="email" id="email" name="email" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" required>
                    </div>
                    <div class="mb-6">
                        <label for="message" class="block text-gray-700 font-medium mb-2">Mensaje</label>
                        <textarea id="message" name="message" rows="6" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" required></textarea>
                    </div>
                    <button type="submit" class="w-full bg-blue-500 text-white py-3 px-6 rounded-lg hover:bg-blue-600 transition-colors">
                        Enviar Mensaje
                    </button>
                </form>

                <div class="mt-12 text-center">
                    <h2 class="text-2xl font-bold mb-4">Información de Contacto</h2>
                    <p class="text-gray-700 mb-2">Email: info@calusajo.com</p>
                    <p class="text-gray-700 mb-2">Teléfono: +1 234 567 890</p>
                    <p class="text-gray-700">Dirección: Calle Principal #123, Ciudad</p>
                </div>
            </div>
        </div>
    </section>
</Layout>
